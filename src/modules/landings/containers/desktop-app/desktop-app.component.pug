    sbpro-page-section(
        sectionClasses='pb-10 pt-1 bg-light',
    )
        include pug_include/device-preview.pug

    sbpro-page-section(
        sectionClasses='pb-10 pt-0 bg-light',
        borderType='rounded',
        borderClasses='text-white'
    )
