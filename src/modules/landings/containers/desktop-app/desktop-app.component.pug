    sbpro-page-section(
        sectionClasses='py-10 bg-white',
    )
        include pug_include/features.pug

    sbpro-page-section(
        sectionClasses='py-10 bg-light',
    )
        include pug_include/feature-cards.pug

    sbpro-page-section(
        sectionClasses='py-10 bg-white',
    )
        include pug_include/features-detailed.pug

